<%@ page language="java" contentType="text/html; charset=UTF-8" pageEncoding="UTF-8"%><%@ taglib prefix="sp" uri="http://mos.xinfan.com/"%><%@ taglib prefix="c" uri="http://java.sun.com/jsp/jstl/core"%><!DOCTYPE html><html lang="en"><head><jsp:include page="../head.jsp"></jsp:include></head><body>	<div class="pd-20" style="padding: 30px;">		<form action="save-confirm-msg.jspx" method="post">			<div class="text-c">				短信确认内容： <input type="text" id="msgtxt" value="已经收到您的订单，我们将尽快为您发货^-^" class="input-text" style="width: 380px;">				<div style="height: 20px;"></div>				<button type="button" class="btn btn-success radius" id="btn_search" name="" onclick="ajax_post();">					发送信息				</button>			</div>		</form>	</div>	<script type="text/javascript">					var _id = '${id}';		function ajax_post() {			var msg = $("#msgtxt").val();			if(msg == null || msg.length ==0){				layer.msg('请输出消息内容');				return false;			}						$.ajax({				type : "POST",				url : "./save-confirm-msg.jspx",				data : {					"id" : _id,					"msg":msg				},				dataType : "json",				success : function(data) {					if (data.result == 0) {						layer.msg('发送成功');						setTimeout(function(){							parent.window.location.reload();							var index = parent.layer.getFrameIndex(window.name);							parent.layer.close(index);							}, 2000);					} else {						layer.msg('发送失败：'+data.message);					}				}			});		}	</script></body></html>