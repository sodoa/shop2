<%@ page language="java" contentType="text/html; charset=UTF-8" pageEncoding="UTF-8"%><%@ taglib prefix="sp" uri="http://mos.xinfan.com/"%><%@ taglib prefix="c" uri="http://java.sun.com/jsp/jstl/core"%><!DOCTYPE html><html lang="en"><head><jsp:include page="../head.jsp"></jsp:include><link rel="stylesheet" href="/jslib/uiadmin/lib/zTree/v3/css/zTreeStyle/zTreeStyle.css" type="text/css"><script type="text/javascript" src="/jslib/uiadmin/lib/zTree/v3/js/jquery.ztree.all-3.5.min.js"></script> <script type="text/javascript" src="/jslib/uiadmin/lib/datatables/1.10.0/jquery.dataTables.min.js"></script></head><body><nav class="breadcrumb"><i class="Hui-iconfont">&#xe67f;</i> 首页 <span class="c-gray en">&gt;</span> 产品管理 <span class="c-gray en">&gt;</span> 产品分类 <a class="btn btn-success radius r mr-20" style="line-height:1.6em;margin-top:3px" href="javascript:location.reload();" title="刷新" ><i class="Hui-iconfont">&#xe68f;</i></a></nav><div class="pd-20"><div class="cl pd-5 bg-1 bk-gray mt-20"> <a class="btn btn-primary radius" onclick="add()" href="javascript:;"><i class="Hui-iconfont">&#xe600;</i> 添加分类</a></span> </div>	<div class="mt-20">	<table class="table table-border table-bordered table-hover table-bg table-sort">		<thead>			<tr class="text-c">                       <th>分类ID</th>                       <th>分类名称</th>                       <th>父分类ID</th>                       <th>排序</th>                       <th>操作</th>               </tr>		</thead>		<tbody>			<c:forEach var="item" items="${topList}">				<tr>					<td>${item.goodstype}</td>					<td style="font-weight: bold;font-size: 14px;">${item.goodstypeName}</td>					<td>${item.pGoodstype }</td>					<td>${item.sort}</td>					<td><a href="#" onclick="del('${item.goodstype}')">删除</a> / <a href="#" onclick="update('${item.goodstype}')">修改</a></td>				</tr>								<c:forEach var="subItem" items="${list}">					<c:if test="${subItem.pGoodstype==item.goodstype}">						<tr>							<td>${subItem.goodstype}</td>							<td>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;${subItem.goodstypeName}</td>							<td>${subItem.pGoodstype }</td>							<td>${subItem.sort}</td>							<td><a href="#" onclick="del('${subItem.goodstype}')">删除</a> / <a href="#" onclick="update('${subItem.goodstype}')">修改</a></td>						</tr>					</c:if>								</c:forEach>			</c:forEach>	                                    			</tbody>	</table>	</div></div><script type="text/javascript">/*用户-编辑*/function add(){	layer_show('增加分类','producttype-add.jspx?opt=1',600,370);	}function update(id){	layer_show('修改分类','producttype-add.jspx?opt=2&id='+id,600,370);	}function del(id){	layer.confirm('确认删除嘛？',function(index){	      $.ajax({type:"POST",	             url:"./producttype-del.jspx",	             data:{'id':id},	             dataType:"json",	             success:function(data){					if(data.result == 0){						//alert("删除成功");						window.location.reload();					}	             }			});	});}</script></body></html>