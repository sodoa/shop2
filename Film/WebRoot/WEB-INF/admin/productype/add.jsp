<%@ page language="java" contentType="text/html; charset=UTF-8" pageEncoding="UTF-8"%><%@ taglib prefix="sp" uri="http://mos.xinfan.com/"%><%@ taglib prefix="c" uri="http://java.sun.com/jsp/jstl/core"%><!DOCTYPE html><html lang="en"><head>      <jsp:include page="../head.jsp"></jsp:include>   <link href="/jslib/uiadmin/lib/icheck/icheck.css" rel="stylesheet" type="text/css" /><script type="text/javascript" src="/jslib/uiadmin/lib/icheck/jquery.icheck.min.js"></script> <script type="text/javascript" src="/jslib/uiadmin/lib/Validform/5.3.2/Validform.min.js"></script>   <script type="text/javascript" src="/jslib/uiadmin/lib/My97DatePicker/WdatePicker.js"></script><script type="text/javascript" src="/jslib/uiadmin/lib/datatables/1.10.0/jquery.dataTables.min.js"></script></head><body><div class="pd-20">  <form action="producttype-save.jspx" method="post" class="form form-horizontal" id="form-user-add">  	<input type="hidden" name="opt"  id="opt" value="${opt}" />	  	  	 <div class="row cl">      <label class="form-label col-2"><span class="c-red">*</span>父ID：</label>      <div class="formControls col-5">        <select name="pGoodstype" class="select input-text">        	<sp:goods_type_list_tag topGoodsType="0" size="100">        			<option value="0" <c:if test="${bean.goodstype == '0'}">selected</c:if> >顶级分类</option>        			<c:forEach var="item" items="${goodstype_list}">        				<option value="${item.goodstype}"  <c:if test="${bean.goodstype == item.goodstype}">selected</c:if> >--||${item.goodstypeName}</option>        			</c:forEach>        	</sp:goods_type_list_tag>                </select>      </div>      <div class="col-5"> </div>    </div>    	    <div class="row cl">      <label class="form-label col-2"><span class="c-red">*</span>分类ID：</label>      <div class="formControls col-5">        <input type="text" class="input-text" value="${bean.goodstype}" datatype="n2-10" placeholder="" id="product-type" name="product-type"  />      </div>      <div class="col-5"> </div>    </div>      <div class="row cl">      <label class="form-label col-2"><span class="c-red">*</span>分类名称：</label>      <div class="formControls col-5">        <input type="text" class="input-text" value="${bean.goodstypeName}"  datatype="s1-20" placeholder="" id="product-type-name" name="product-type-name" />      </div>      <div class="col-5"> </div>    </div>    <div class="row cl">      <label class="form-label col-2"><span class="c-red">*</span>排序：</label>      <div class="formControls col-5">        <input type="number" class="input-text" value="${bean.sort}"  datatype="n1-9" placeholder="" id="product-type-sort" name="product-type-sort"  />      </div>      <div class="col-5"> </div>    </div>        <div class="row cl">      <div class="col-9 col-offset-2">        <input class="btn btn-primary radius" type="button" value="&nbsp;&nbsp;保存&nbsp;&nbsp;" id="btn_add">        <c:if test="${opt=='2'}">        <input class="btn btn-primary radius" type="button" value="&nbsp;&nbsp;删除&nbsp;&nbsp;" id="btn_delete" >        </c:if>      </div>    </div>  </form></div><script type="text/javascript">$(function(){	$("#btn_add").click(function(){		goodstype_save();	});	$("#btn_delete").click(function(){		goodstype_delete();	});		$("#form-user-add").Validform({		tiptype:2,		callback:function(form){			form[0].submit();		}	});});function goodstype_delete(){		layer.confirm('确认删除嘛？',function(index){		$("#opt").val("3");		$("#form-user-add").submit();	});	}function goodstype_save(){	$("#form-user-add").submit();}</script></body></html>